<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.thisonline.achilles.HelpScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageHelp01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/help_bg_01" />

            <ImageView
                android:id="@+id/imageHelp02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/help_bg_02" />

            <ImageView
                android:id="@+id/imageHelp03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/help_bg_03" />
        </LinearLayout>
    </com.thisonline.achilles.HelpScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/arrowHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewAdvertTabHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/advert" />

</RelativeLayout>