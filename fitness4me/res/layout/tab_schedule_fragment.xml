<?xml version="1.0" encoding="utf-8"?>

<!--
 Layout for "Schedule" tab frament, holding:
 	* ad
 	* 2 spinners to choose club & training type 
 	* custom tabs bar to choose day
 	* ViewPager with 7 week tabs (Mon-Sun)
 (comment&fixes by Marek Zawadzki)
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash">

    <ImageView
        android:id="@+id/imageViewAdvertTabSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@drawable/advert"
        android:scaleType="fitCenter"
        android:src="@drawable/advert" />

    <LinearLayout
        android:id="@+id/linearLayoutSpinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@id/imageViewAdvertTabSchedule">

        <Button
            android:id="@+id/buttonChooseClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trainings_bar_left"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="@string/choose_a_club"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChooseTrainingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trainings_bar_right"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="@string/choose_a_training_type"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabsBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutSpinners"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/tabsBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>